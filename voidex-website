<script>
/* ══════════════════════════════════════════
   MOBILE DETECTION
   Uses multiple signals: touch points, UA,
   screen width, and pointer type
   ══════════════════════════════════════════ */
function isMobile(){
  const touch = navigator.maxTouchPoints > 0 || 'ontouchstart' in window;
  const ua = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini|Mobile|Tablet/i.test(navigator.userAgent);
  const narrow = window.innerWidth <= 900;
  const coarse = window.matchMedia('(pointer:coarse)').matches;
  return touch || ua || (narrow && coarse);
}

const IS_MOBILE = isMobile();

/* ── MOBILE BANNER ── */
const banner = document.getElementById('mobile-banner');
const closeBtn = document.getElementById('mb-close-btn');
const nav = document.getElementById('mainNav');
const mobileMenu = document.getElementById('mobileMenu');
const BANNER_H = 52; // px height of the banner

if(IS_MOBILE){
  // show banner
  banner.style.display = 'flex';
  document.body.classList.add('mobile-detected');
  // push nav down
  nav.style.top = BANNER_H + 'px';
  mobileMenu.style.top = (62 + BANNER_H) + 'px';
  // hide desktop cursor elements
  document.getElementById('cur').style.display = 'none';
  document.getElementById('cur-ring').style.display = 'none';
  document.body.style.cursor = 'auto';
}

closeBtn && closeBtn.addEventListener('click', closeMobileBanner);
function closeMobileBanner(){
  banner.style.animation = 'bannerOut .3s ease forwards';
  setTimeout(()=>{
    banner.style.display = 'none';
    nav.style.top = '0';
    mobileMenu.style.top = '62px';
    document.body.classList.remove('mobile-detected');
  }, 300);
}

/* ── HAMBURGER / MOBILE MENU ── */
const hamburger = document.getElementById('hamburger');
hamburger && hamburger.addEventListener('click', toggleMenu);

function toggleMenu(){
  const open = mobileMenu.classList.toggle('open');
  hamburger.classList.toggle('open', open);
  document.body.classList.toggle('menu-open', open);
}
function closeMenu(){
  mobileMenu.classList.remove('open');
  hamburger && hamburger.classList.remove('open');
  document.body.classList.remove('menu-open');
}
// close menu when any mobile menu link is tapped
document.querySelectorAll('.nav-mobile-menu a').forEach(a => a.addEventListener('click', closeMenu));
// close menu on outside tap
document.addEventListener('click', e => {
  if(!e.target.closest('nav') && !e.target.closest('.nav-mobile-menu')) closeMenu();
});

/* ── CUSTOM CURSOR (desktop only) ── */
if(!IS_MOBILE){
  const cur=document.getElementById('cur'),ring=document.getElementById('cur-ring');
  let mx=0,my=0,rx=0,ry=0;
  document.addEventListener('mousemove',e=>{mx=e.clientX;my=e.clientY});
  (function loop(){rx+=(mx-rx)*.1;ry+=(my-ry)*.1;cur.style.left=mx+'px';cur.style.top=my+'px';ring.style.left=rx+'px';ring.style.top=ry+'px';requestAnimationFrame(loop)})();
  document.querySelectorAll('a,button,[onclick],input').forEach(el=>{
    el.addEventListener('mouseenter',()=>{cur.style.width='16px';cur.style.height='16px';cur.style.background='var(--pink)';ring.style.width='46px';ring.style.height='46px'});
    el.addEventListener('mouseleave',()=>{cur.style.width='10px';cur.style.height='10px';cur.style.background='var(--acc-lt)';ring.style.width='32px';ring.style.height='32px'});
  });
}

/* ── STARFIELD ── */
const canvas=document.getElementById('starfield'),ctx=canvas.getContext('2d');
let stars=[];
function initS(){canvas.width=window.innerWidth;canvas.height=window.innerHeight;stars=Array.from({length:IS_MOBILE?80:180},()=>({x:Math.random()*canvas.width,y:Math.random()*canvas.height,r:Math.random()*1.1+.2,spd:Math.random()*.003+.001,phase:Math.random()*Math.PI*2}))}
function drawS(){ctx.clearRect(0,0,canvas.width,canvas.height);const t=Date.now()*.001;stars.forEach(s=>{const a=.08+Math.abs(Math.sin(t*s.spd*40+s.phase))*.45;ctx.beginPath();ctx.arc(s.x,s.y,s.r,0,Math.PI*2);ctx.fillStyle=`rgba(180,160,255,${a})`;ctx.fill()});requestAnimationFrame(drawS)}
initS();drawS();window.addEventListener('resize',initS);

/* ── REVEAL ── */
const io=new IntersectionObserver(e=>e.forEach(x=>{if(x.isIntersecting)x.target.classList.add('in')}),{threshold:.1});
document.querySelectorAll('.reveal').forEach(el=>io.observe(el));

/* ── CARD GLOW (desktop only) ── */
function cardMx(c,e){if(IS_MOBILE)return;const r=c.getBoundingClientRect();c.style.setProperty('--mx',((e.clientX-r.left)/r.width*100)+'%');c.style.setProperty('--my',((e.clientY-r.top)/r.height*100)+'%')}

/* ── WINDOW: tab switch ── */
function switchWinTab(name,btn){
  document.querySelectorAll('#liveWin .vx-tab').forEach(t=>t.classList.remove('active'));
  btn.classList.add('active');
  document.querySelectorAll('#liveWin .vx-page').forEach(p=>p.style.display='none');
  document.getElementById('wp-'+name).style.display='flex';
}

/* ── WINDOW: toggle ── */
function winToggle(row){const t=row.querySelector('.vx-toggle');t.classList.toggle('on');t.classList.toggle('off')}

/* ── WINDOW: slider ── */
function wSlide(inp,v,f,t,mn,mx){const p=((inp.value-mn)/(mx-mn)*100).toFixed(1)+'%';document.getElementById(f).style.width=p;document.getElementById(t).style.left=p;document.getElementById(v).textContent=inp.value}

/* ── DEMO: toggle ── */
function demoToggle(row){const t=row.querySelector('.lua-track');t.classList.toggle('on');t.classList.toggle('off')}

/* ── DEMO: slider ── */
function demoSlider(inp,v,f,t,mn,mx){const p=((inp.value-mn)/(mx-mn)*100).toFixed(1)+'%';document.getElementById(f).style.width=p;document.getElementById(t).style.left=p;document.getElementById(v).textContent=inp.value}

/* ── DEMO: button ── */
function demoBtn(btn){const lbl=btn.querySelector('.lua-btn-lbl');const orig=lbl.textContent;lbl.textContent='✓ Executed!';lbl.style.color='var(--success)';setTimeout(()=>{lbl.textContent=orig;lbl.style.color=''},1200)}

/* ── DEMO: dropdown ── */
function demoDD(id){const dd=document.getElementById(id);const open=dd.classList.contains('open');document.querySelectorAll('.lua-dd').forEach(d=>d.classList.remove('open'));if(!open)dd.classList.add('open')}
function pickDD(id,val,el){document.getElementById(id+'-val').textContent=val;el.closest('.lua-dd').querySelectorAll('.lua-dd-item').forEach(i=>i.classList.remove('sel'));el.classList.add('sel');document.getElementById(id).classList.remove('open')}
document.addEventListener('click',e=>{if(!e.target.closest('.lua-dd'))document.querySelectorAll('.lua-dd').forEach(d=>d.classList.remove('open'))});

/* ── DEMO: color ── */
function pickColor(hex){document.getElementById('mainSwatch').style.background=hex}

/* ── DEMO: keybind ── */
let kbActive=null;
function listenKey(id){
  if(IS_MOBILE)return; // keybinds don't apply on mobile
  if(kbActive===id)return;
  if(kbActive){document.getElementById(kbActive).classList.remove('listening')}
  kbActive=id;const el=document.getElementById(id);el.classList.add('listening');el.textContent='...';
  const h=e=>{const map={' ':'Space',Shift:'Shift',Control:'Ctrl',Alt:'Alt',Escape:'Escape',Meta:'Meta'};const key=map[e.key]||(e.key.length===1?e.key.toUpperCase():e.code.replace(/^(Key|Digit)/,''));el.textContent=key;el.classList.remove('listening');kbActive=null;document.removeEventListener('keydown',h)};
  document.addEventListener('keydown',h);
}

/* ── FULL EXAMPLE EXPAND ── */
function toggleFullEx(btn){const body=document.getElementById('fullExBody');const chev=btn.querySelector('.full-ex-chevron');const open=body.classList.toggle('open');chev.style.transform=open?'rotate(180deg)':''}

/* ── COPY CODE ── */
function copyCode(btn){const pre=btn.closest('.code-block').querySelector('pre');navigator.clipboard.writeText(pre.innerText).then(()=>{btn.textContent='✓ Copied!';btn.classList.add('ok');setTimeout(()=>{btn.textContent='Copy';btn.classList.remove('ok')},1800)})}
</script>
</body>
</html>
